# ============================================
# Multi-Stage Build: Optimized for Size
# Generated by configurable-agents deploy command
# ============================================

# Stage 1: Builder (install dependencies)
FROM python:3.10-slim AS builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc g++ && rm -rf /var/lib/apt/lists/*

# Copy requirements and install to user site-packages
COPY requirements.txt .
RUN pip install --user --no-cache-dir -r requirements.txt

# ============================================
# Stage 2: Runtime (minimal, no build tools)
# ============================================
FROM python:3.10-slim

WORKDIR /app

# Copy installed packages from builder
COPY --from=builder /root/.local /root/.local

# Copy application files
COPY workflow.yaml server.py ./

# Environment
ENV PATH=/root/.local/bin:$$PATH
ENV PYTHONUNBUFFERED=1

# Create mlruns directory
RUN mkdir -p /app/mlruns

# Expose ports
EXPOSE ${api_port} ${mlflow_port}

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD python -c "import urllib.request; urllib.request.urlopen('http://localhost:${api_port}/health').read()"

# Start server (MLFlow UI in background if enabled, FastAPI in foreground)
${cmd_line}
